<div class="card">
    <img class="card-img-top" src="<%=prod.productImageURL%>" alt="Product Image"/>
    <div class="card-title"><%=prod.productName%></div>
    <div class="card-body"><%=prod.productDesc%></div>
    <div class="row">
        <div class="col-6">
            <form method="POST" action="/admin/edit">
                <input hidden type="text" name="productID" value="<%=prod.productID%>"/>
                <button type="submit" class="btn btn-primary">Edit</button>
            </form>
        </div>
        <div class="col-6">
            <form method="POST" action="/admin/delete">
                <input hidden type="text" name="productID" value="<%=prod.productID%>"/>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
    
    
</div>
