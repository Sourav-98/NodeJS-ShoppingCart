<div class="card item-card">
    <img class="card-img-top" src="<%=prod.productImageURL%>" alt="Product Image"/>
    <h5 class="card-title"><%=prod.productName%></h5>
    <div class="card-body"><%=prod.productDesc%></div>
    <div class="row">
        <div class="col-1"></div>
        <div class="col-4">
            <form method="POST" action="/admin/edit">
                <input hidden type="text" name="productID" value="<%=prod.productID%>"/>
                <button type="submit" class="btn btn-primary btn-block">Edit</button>
            </form>
        </div>
        <div class="col-2"></div>
        <div class="col-4">
            <form method="POST" action="/admin/delete">
                <input hidden type="text" name="productID" value="<%=prod.productID%>"/>
                <button type="submit" class="btn btn-danger btn-block">Delete</button>
            </form>
        </div>
        <div class="col-1"></div>
    </div>
    
    
</div>
