<%- include('../includes/header') %>
<%- include('../includes/navigation') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card">
                <h2 class="card-title">
                    Add A New Product
                </h2>
                <div class="card-body">
                    <form class="form" method="POST" action="/admin/add-product">
                        <div class="form-group row">
                            <label for="prod_name">Product Name:</label>
                            <input class="form-control" id="prod_name" name="productName" type="text"/>
                        </div>
                        <div class="form-group row">
                            <label for="prod_image">Add Image URL</label>
                            <input class="form-control" id="prod_image" name="productImageURL" type="text"/>
                        </div>
                        <div class="form-group row">
                            <label for="prod_price">Enter Price (in &#8377;)</label>
                            <input class="form-control" id="prod_price" name="productPrice" type="text"/>
                        </div>
                        <div class="form-group row">
                            <label for="prod_desc">Description</label>
                            <textarea class="form-control" id="prod_desc" name="productDesc"></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Add Product</button>
                        </div>
                    </form>
                </div>                
            </div>
            
        </div>
        <div class="col-md-3"></div>
    </div>
</div>

<%- include('../includes/footer') %>
